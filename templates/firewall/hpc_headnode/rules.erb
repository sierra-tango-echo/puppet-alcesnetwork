ACCEPT		ext		$FW		tcp	22

#allow incoming from external interface for http and https
ACCEPT		ext		$FW		tcp	80
ACCEPT		ext		$FW		tcp	443

#Allow incoming VPN
ACCEPT		ext		$FW		tcp	1194
ACCEPT		ext		$FW		tcp	1195
#allow incoming from external interface for rdesktop (xrdp) (specific address mask)
ACCEPT		ext:10.10.0.0/24		$FW		tcp	3389
